    .acoes{
      height: 3.5vh;
            background-color: #054f85;
            color: #ffffff;
            font-size: medium;
            padding: 2px 6px;
            margin-left: 3px;
            border:8px blue solida;   
    }                                                      
</style>
<div class="content p-1" style="width: 100%;height: 10vh;margin-top:3.2rem;border-color: #ab0707 1px;background-color: aqua;">
    <div class="list-group-item" style="background-color: #300578;">
                    <div class="d-flex" style="background-color: transparent;">
                        <div class=" p-2" style="padding: 15px;width: 100%;">
                            <div style="display: flex;flex-direction: row;align-items: center;background-color: transparent;width: 100%;padding: 10px;">
                                <div style="background-color:transparent;justify-content:flex-start;width: 50%;color:#ffffff">
                                        <h2 class="display-4 titulo"> Lista de produtos de : <span  style="color:#ff0000;font-size: medium;">{{razao}}</span></h2>
                                </div>
                                <div style="margin-right:30px;background-color:transparent;justify-content:flex-end;width: 50%;">
                                        <a href="/lojista/cadastro_produtoname/{{razao}}">
                                            <button class="btn btn-primary dropdown-toggle btn-sm" type="submit" id="acoesListar" style="float:right;margin-right: 30px;">
                                                Cadastrar produto?
                                            </button>
                                          </a>  
                                        <input name="razao_input" value="{{value}}">  
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    {{!-- .................................................................. --}}
                    <hr>
                    <p id="p_razao" style="color:greenyellow">produto/list-produto - {{razao}}</p>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-bordered" style="background-color: #fbf5f5;">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>código</th>
                                    <th class="d-none d-sm-table-cell">descritivo</th>
                                    <th class="d-none d-lg-table-cell">detalhe</th>
                                    <th class="d-none d-lg-table-cell">tecido</th>
                                    <th class="d-none d-lg-table-cell">cor</th>
                                    <th class="">Ações</th>
                                    <th class="">Visualizar</th>
                                </tr>
                            </thead>
                            
                            <tbody>
                                 {{#each lista}}
                                <tr style="font-size: small;color: #000000;font-weight: 100;">
                                    <td style="width: 12%;">{{_id}}</th>
                                    <td style="width: 12%;">{{produto.codigo}}</td>
                                    <td style="width: 20%;" class="d-none d-sm-table-cell" style="font-size:small ;" >{{produto.descricao}}</td>
                                    <td style="width: 12%;" class="d-none d-lg-table-cell">{{produto.detalhe}}</td>
                                    <td style="width: 12%;" class="d-none d-lg-table-cell">{{produto.tecido}}</td>
                                    <td style="width: 8%;" class="d-none d-lg-table-cell">{{produto.cor}}</td>
                                    <td class="text-center" style="display: flex;flex-direction: row;justify-content: center;">
                                        <span class="d-none d-md-block">
                                            <form action="/lojistaseg/vis-produto/" method="POST" enctype="application/x-www-form-urlencoded"> 
                                                <input name="razaoInput" style="color:red;display: none;" value={{produto.cnpjloja}}> 
                                                <input name="codigoinput" style="color:red;display: none;" value={{produto.codigo}}> 
                                                <button type="submit" class="acoes" >
                                                              Visualizar
                                                </button>
                                            </form>
                                                                                                    
                                        </span>
                                        {{produto.cnpj}}
                                    </td> 
                                    <td class="text-center" style="">     </td>  
                                        {{!-- <div class="dropdown d-block d-md-none" style="display: none;">
                                            <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                Ações
                                            </button>
                                             <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                                <a class="dropdown-item" href="/contato/vis-contato/{{_id}}">Cadastrar Produtos</a>
                                            </div>
                                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                                <a class="dropdown-item" href="/contato/vis-contato/{{_id}}">Visualizar</a>
                                            </div>
                                        </div> --}}
                                  
                                </tr>
                                {{/each}}
                             </tbody>   
                        </table>    
                          <nav aria-label="paginacao">
                            <ul class="pagination pagination-sm justify-content-center">
                                {{#if contatos.hasPrevPage}}
                                     <li class="page-item">
                                        <a class="page-link" href="/contato/list-contato" tabindex="-1">Primeira</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="/contato/list-contato?page={{contatos.prevPage}}">{{contatos.prevPage}}</a></li>
                                {{else}}
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                                    </li>
                                {{/if}}
                                                               
                                <li class="page-item active">
                                    <a class="page-link" href="#">{{contatos.page}}</a>
                                </li>
                                {{#if contatos.hasNextPage}}
                                    <li class="page-item"><a class="page-link" href="/contato/list-contato?page={{contatos.nextPage}}">{{contatos.nextPage}}</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="/contato/list-contato?page={{contatos.totalPages}}" tabindex="-1">Última</a>
                                    </li>

                                {{else}}
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#">Última</a>
                                    </li>
                                {{/if}}


                                
                            </ul>
                        </nav>
                    </div>    
    </div>
</div>


